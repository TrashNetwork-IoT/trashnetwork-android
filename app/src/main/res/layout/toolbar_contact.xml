<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:layout_collapseMode="pin"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <LinearLayout android:id="@+id/toolbar_contact_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toolbar_portrait"
            android:layout_width="@dimen/toolbar_portrait_size"
            android:layout_height="@dimen/toolbar_portrait_size"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="1dp"
            app:civ_border_color="#eeeeee"
            app:civ_fill_color="#eeeeee"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/item_padding"/>

        <TextView android:id="@+id/txt_toolbar_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.WindowTitle"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"/>

    </LinearLayout>

</android.support.v7.widget.Toolbar>